@using Application.Database.Readers
@model Application.Dtos.ReaderDto

<h2 class="text-center my-4">Edit Reader</h2>

<form asp-action="Edit" method="post" class="w-50 mx-auto border p-4 rounded shadow">
   <input type="hidden" asp-for="Id" />

   <div class="mb-3">
      <label asp-for="Name" class="form-label">Name</label>
      <input type="text" asp-for="Name" class="form-control" oninput="this.value=this.value.replace(/[^a-zA-Z ]/g,'')" maxlength="@ReaderModel.NameMaxLength" required />
      <span asp-validation-for="Name" class="text-danger"></span>
   </div>

   <div class="mb-3">
      <label asp-for="Email" class="form-label">Email</label>
      <input type="email" asp-for="Email" typeof="email" class="form-control" maxlength="@ReaderModel.EmailMaxLength" required />
      <span asp-validation-for="Email" class="text-danger"></span>
   </div>

   <div class="d-flex justify-content-between">
      <a asp-action="GetPagedReaders" class="btn btn-secondary">Back</a>
      <button type="submit" class="btn btn-primary">Save</button>
   </div>
</form>